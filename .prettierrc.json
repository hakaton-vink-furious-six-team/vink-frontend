{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "printWidth": 125,
  "overrides": [
    {
      "files": "*.{c,m,}{t,j}s",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "*.{t,j}sx",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "*{test,spec}.{t,j}s?(x)",
      "options": {
        "parser": "typescript"
      },
      "env": {
        "jest": true
      }
    }
  ]
}